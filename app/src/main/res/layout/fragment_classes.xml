<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackgroundGrey">
    <android.support.v7.widget.Toolbar
        android:id="@+id/classes_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorFullWhite">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:hint="搜索技能和能人"
            android:textColorHint="@color/colorCursorGrey"
            android:textColor="@color/colorFullBlack"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="17sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/classes_listItem"
            android:layout_height="match_parent"

            android:background="@color/colorFullWhite">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/classes_image_header"
                android:src="@drawable/img_class_header1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/classes_detailItem"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>